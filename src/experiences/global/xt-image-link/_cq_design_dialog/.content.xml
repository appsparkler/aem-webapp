<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="XT Image Link Designer"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <container
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <textFieldClasses
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="The Logo-Image for the XT Navbar"
                        fieldLabel="Link CSS Classes"
                        name="./linkCSSClasses"/>
                    <imgClasses
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="The Logo-Image for the XT Navbar"
                        fieldLabel="Image CSS Classes"
                        name="./imgCSSClasses"/>
                    <imgWidth
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Image width"
                        fieldLabel="Image Width"
                        name="./imgWidth"/>
                    <imgHeight
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="The image's height."
                        fieldLabel="Image Height"
                        name="./imgHeight"/>
                </items>
            </container>
        </items>
    </content>
</jcr:root>
