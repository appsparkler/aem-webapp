<?xml version="1.0" encoding="UTF-8"?>
<jcr:root
  xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
  xmlns:cq="http://www.day.com/jcr/cq/1.0"
  xmlns:jcr="http://www.jcp.org/jcr/1.0"
  xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
  jcr:primaryType="nt:unstructured"
  jcr:title="Logo Edit Dialog"
  sling:resourceType="cq/gui/components/authoring/dialog"
>
  <content jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/container">
    <items jcr:primaryType="nt:unstructured">
        <LogoImageInnerContainer jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/container">
          <items jcr:primaryType="nt:unstructured">

            <ImageDrop
              jcr:primaryType="nt:unstructured"
              sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
              autoStart="{Boolean}false"
              class="cq-droptarget"
              fileNameParameter="./filename"
              fileReferenceParameter="./imgSrc"
              mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff]"
              multiple="{Boolean}false"
              name="./logoImg"
              title="Add Company Logo"
              uploadUrl="${suffix.path}"
              useHTML5="{Boolean}true"
              allowUpload="{Boolean}false"
              required="{Boolean}true"
              />

            <LogoLink
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                fieldDescription="Make the image a link to another resource."
                fieldLabel="URL on logo"
                name="./href"
                rootPath="/content"
                wrapperClass="cmp-image__editor-link"
                emptyText="Content Link..."
                required="{Boolean}true"
              />

            <AltText
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldDescription="Alternate text for logo"
                fieldLabel="Alternate Text"
                name="./alt"
                required="{Boolean}true"
                emptyText="Alt Text..."
            />


          </items>
        </LogoImageInnerContainer>
    </items>
  </content>
</jcr:root>
